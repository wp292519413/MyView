<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.bmkp.myview.widget.CodeEditText
        android:id="@+id/cet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_shape"
        app:background_normal="@drawable/bg_normal_line"
        app:background_selected="@drawable/bg_selected_line"
        app:code_height="40dp"
        app:code_width="32dp"
        app:input_type1="text"
        app:length="6"
        app:margin_left="12dp"
        app:text_color="@color/text_color1"
        app:text_size="28sp"/>

</RelativeLayout>
