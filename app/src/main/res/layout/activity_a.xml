<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.bmkp.myview.widget.CodeEditText
        android:id="@+id/cet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:background_normal="@drawable/bg_normal_shape"
        app:background_selected="@drawable/bg_selected_shape"
        app:code_height="40dp"
        app:code_width="40dp"
        app:input_type1="number"
        app:length="6"
        app:margin_left="8dp"
        app:text_color="@color/text_color1"
        app:text_size="20sp"/>

</RelativeLayout>
