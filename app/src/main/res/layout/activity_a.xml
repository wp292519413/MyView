<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.bmkp.myview.widget.CodeEditText
        android:id="@+id/cet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:background_normal="@drawable/bg_normal_shape"
        app:background_selected="@drawable/bg_selected_shape"
        app:code_height="60dp"
        app:code_width="60dp"
        app:length="4"
        app:margin_left="12dp"
        app:text_color="@color/text_color2"
        app:text_size="24sp"/>

</RelativeLayout>
