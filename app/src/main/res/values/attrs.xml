<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 声明属性 -->
    <attr name="text_size" format="dimension"/>
    <attr name="text_color" format="color"/>
    <attr name="digits" format="string"/>

    <declare-styleable name="CustomEditTextView">

        <attr name="input_type">
            <enum name="text" value="0"/>
            <enum name="phone" value="1"/>
            <enum name="password" value="2"/>
            <enum name="money" value="3"/>
        </attr>

        <attr name="max_length" format="integer"/>
        <attr name="text_size"/>
        <attr name="text_color"/>
        <attr name="cursor_color" format="color"/>
        <attr name="hint" format="string"/>
        <attr name="text" format="string"/>
        <attr name="digits"/>
        <attr name="max_value" format="float"/>
        <attr name="min_value" format="float"/>
        <attr name="precision" format="integer"/>

        <attr name="underLine_visibility">
            <enum name="visible" value="0"/>
            <enum name="gone" value="8"/>
        </attr>

        <attr name="cursor_visibility">
            <enum name="visible" value="0"/>
            <enum name="gone" value="8"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="CodeEditText">
        <attr name="length" format="integer"/>
        <attr name="text_size"/>
        <attr name="text_color"/>
        <attr name="code_width" format="dimension"/>
        <attr name="code_height" format="dimension"/>
        <attr name="margin_left" format="dimension"/>
        <attr name="background_normal" format="reference"/>
        <attr name="background_selected" format="reference"/>
        <attr name="digits"/>
        <attr name="input_type1">
            <enum name="text" value="1"/>
            <enum name="number" value="2"/>
        </attr>
    </declare-styleable>

</resources>