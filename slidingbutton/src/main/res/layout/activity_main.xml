<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.bmkp.slidingbutton.widget.SlidingButton
        android:id="@+id/sliding_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        app:slider_background="@drawable/bg_slider_selector"
        app:button_background="@drawable/bg_button_shape"
        app:center_text="中间文本"
        app:center_text_color="@color/white"
        app:center_text_size="16sp"
        app:loading_drawable="@drawable/loading_resource"
        app:loading_size="18dp"
        app:slider_image_src="@drawable/right_move_tip"
        app:slider_image_size="20dp"
        app:tips_image_src="@drawable/completed"
        app:tips_image_size="20dp"/>

    <cn.bmkp.slidingbutton.widget.MyViewGroup
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <LinearLayout
        android:id="@+id/bottom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="normal"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="loading"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="禁用"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启用"/>

    </LinearLayout>

</RelativeLayout>
